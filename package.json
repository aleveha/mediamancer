{
	"name": "mediamancer",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"build-exe": "bun build --compile --minify --target=bun --outfile ./dist/exe ./src/index.ts",
		"build-js": "bun build --minify --target=bun --outdir ./dist ./src/index.ts",
		"dev": "bun run --watch src/index.ts",
		"format": "biome format --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.2",
		"@types/bun": "latest",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"elysia": "^1.4.15",
		"sharp": "^0.34.5",
		"valibot": "^1.1.0"
	}
}
