{
	"compilerOptions": {
		"allowJs": false,
		"baseUrl": "src",
		"esModuleInterop": true,
		"isolatedModules": true,
		"lib": ["es2022"],
		"module": "preserve",
		"moduleDetection": "force",
		"noEmit": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true,
		"paths": {
			"~/*": ["./*"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es2022",
		"verbatimModuleSyntax": true,
		"noErrorTruncation": true
	}
}
